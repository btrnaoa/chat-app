{
  "name": "chat-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn workspace server start",
    "dev": "concurrently \"yarn workspace server dev\" \"yarn generate --watch\" \"yarn workspace client start\"",
    "predev": "yarn build:schema",
    "build:schema": "yarn workspace server build:schema",
    "generate": "graphql-codegen",
    "heroku-postbuild": "yarn build:schema && yarn generate && yarn workspace client build"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/import-types-preset": "^1.18.4",
    "@graphql-codegen/typescript": "^1.22.3",
    "@graphql-codegen/typescript-operations": "^1.18.2",
    "@graphql-codegen/typescript-react-apollo": "^2.2.7",
    "concurrently": "^6.0.0"
  },
  "dependencies": {
    "graphql": "^15.5.1"
  }
}
